<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/thumbnail_restaurant"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/food"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/title_restaurant"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/thumbnail_restaurant"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:text="Sultan's Dine"
                />
            <TextView
                android:id="@+id/category_restaurant"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_restaurant"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:text="Biriyani House"
                />

            <ImageView
                android:id="@+id/rating_restaurant_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/category_restaurant"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-14dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_baseline_star" />

            <TextView
                android:id="@+id/rating_restaurant_text"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_below="@id/category_restaurant"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-14dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="4dp"
                android:text="4.5" />

            <!--            <TextView-->
<!--                android:id="@+id/delivery_cost_restaurant"-->
<!--                style="@style/TextAppearance.AppCompat.Subhead"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/category_restaurant"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:padding="8dp"-->
<!--                android:text="Delivery Charge 20TK"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_marginLeft="8dp"-->
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
