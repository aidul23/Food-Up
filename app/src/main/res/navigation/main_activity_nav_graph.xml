<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.duodevloopers.foodup.HomeFragment"
        android:label="FoodUp"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.duodevloopers.foodup.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.duodevloopers.foodup.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editUserProfileFragment"
            app:destination="@id/editUserProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.duodevloopers.foodup.OrderFragment"
        android:label="Order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/balanceFragment"
        android:name="com.duodevloopers.foodup.BalanceFragment"
        android:label="Balance"
        tools:layout="@layout/fragment_faq" />
    <fragment
        android:id="@+id/termsFragment"
        android:name="com.duodevloopers.foodup.TermsFragment"
        android:label="Terms &amp; Conditions"
        tools:layout="@layout/fragment_terms" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.duodevloopers.foodup.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.duodevloopers.foodup.RestaurantFragment"
        android:label="Restaurants"
        tools:layout="@layout/fragment_restaurant">
        <action
            android:id="@+id/action_restaurantFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <argument
            android:name="restaurantTitle"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.duodevloopers.foodup.SummaryFragment"
        android:label="Order Summary"
        tools:layout="@layout/fragment_summary" >
        <argument
            android:name="SummaryItemPojo"
            app:argType="com.duodevloopers.foodup.Model.SummaryItemPojo"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/editUserProfileFragment"
        android:name="com.duodevloopers.foodup.EditUserProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_user_profile" />
</navigation>